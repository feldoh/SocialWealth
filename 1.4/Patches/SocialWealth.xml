<?xml version="1.0" encoding="utf-8"?>

<Patch>
    <!-- Add tourist quest to base storyteller -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/StorytellerDef[@Name="BaseStoryteller"]/comps</xpath>
        <value>
            <li Class="StorytellerCompProperties_FactionInteraction">
                <incident>SocialWealth_GiveQuest_Hospitality_Tourist</incident>
                <baseIncidentsPerYear>1</baseIncidentsPerYear>
                <minSpacingDays>20</minSpacingDays>
                <minDanger>None</minDanger>
                <fullAlliesOnly>false</fullAlliesOnly>
                <minWealth>350000</minWealth>
            </li>
        </value>
    </Operation>

    <!-- Add SocialImpact.StatPart_Wealth to SocialImpact -->
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/StatDef[defName="SocialImpact"]/parts</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="SocialImpact"]</xpath>
            <value>
                <parts />
            </value>
        </nomatch>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/StatDef[defName="SocialImpact"]/parts</xpath>
        <value>
            <li Class="SocialWealth.StatPart_Wealth" />
        </value>
    </Operation>

    <!-- Add SocialWealth.StatPart_Wealth to NegotiationAbility -->
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/StatDef[defName="NegotiationAbility"]/parts</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="NegotiationAbility"]</xpath>
            <value>
                <parts />
            </value>
        </nomatch>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/StatDef[defName="NegotiationAbility"]/parts</xpath>
        <value>
            <li Class="SocialWealth.StatPart_Wealth" />
        </value>
    </Operation>

    <!-- Add SocialWealth.StatPart_Wealth to TradePriceImprovement -->
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/StatDef[defName="TradePriceImprovement"]/parts</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="TradePriceImprovement"]</xpath>
            <value>
                <parts />
            </value>
        </nomatch>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/StatDef[defName="TradePriceImprovement"]/parts</xpath>
        <value>
            <li Class="SocialWealth.StatPart_Wealth">
                <curve>
                    <points>
                        <li>(0, 1.1)</li>
                        <li>(1, 0.8)</li>
                        <li>(2, 0.6)</li>
                        <li>(3, 0.5)</li>
                        <li>(5, 0.4)</li>
                        <li>(10, 0.2)</li>
                    </points>
                </curve>
            </li>
        </value>
    </Operation>
</Patch>
